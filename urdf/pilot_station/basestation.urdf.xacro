<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="tiago_pro_pilot_station" params="name parent">
  
  <!-- Teleop pilot station base link -->
    <link
      name="${name}_base_link">
      <inertial>
        <origin
          xyz="0.0 0.0 0.0"
          rpy="0.0 0.0 0.0" />
        <mass
          value="1.0" />
        <inertia
          ixx="1.8157E-06"
          ixy="1.8157E-06"
          ixz="-1.8157E-06"
          iyy="1.8157E-06"
          iyz="1.8157E-06"
          izz="1.8157E-06" />
      </inertial>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
            <mesh filename="package://tiago_pro_description/meshes/pilot_station/fixed_sit_station.stl" />
        </geometry>
        <material
          name="">
          <color
            rgba="0.75294 0.75294 0.75294 1" />
        </material>
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
            <mesh filename="package://tiago_pro_description/meshes/pilot_station/fixed_sit_station.stl" />
        </geometry>
      </collision>
    </link>
    <joint
      name="${name}_base_joint"
      type="fixed">
      <origin
        rpy="0 0 0"
        xyz="0.0 -1.5 0.0" />
      <parent
        link="${parent}" />
      <child
        link="${name}_base_link" />
      <axis
        xyz="0 0 0" />
    </joint>

    <!-- Teleop pilot station arm left link -->
    <link name="${name}_arm_left_link"/>
    
    <joint name="${name}_arm_left_joint" type="fixed">
      <origin xyz="0.0 0.159181203216899 1.21589163274" rpy="-2.06788770984932 0 -1.22173047639603" />
      <parent link="${name}_base_link" />
      <child link="${name}_arm_left_link" />
      <axis xyz="0 0 0" />
    </joint>

    <!-- Teleop pilot station arm right link -->
    <link name="${name}_arm_right_link"/>

    <joint name="${name}_arm_right_joint" type="fixed">
      <origin xyz="0.0 -0.159181203216899 1.21589163274" rpy="-2.06788770984932 0 -1.91986217719377" />
      <parent link="${name}_base_link" />
      <child link="${name}_arm_right_link" />
      <axis xyz="0 0 0" />
    </joint>
    

  </xacro:macro>
</robot>
